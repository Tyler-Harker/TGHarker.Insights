@using TGHarker.Insights.Web.Pages.Dashboard
@model DashboardPageModel

@{
    var currentPage = Model.CurrentPage;
}

<!-- Module Tabs -->
<div class="module-tabs">
    <nav class="nav flex-column">
        <a class="nav-link active" href="/dashboard/@Model.ApplicationId">
            <i class="bi bi-bar-chart-fill"></i>Web Analytics
        </a>
        <!-- Future modules can be added here -->
        <!-- <a class="nav-link disabled" href="#">
            <i class="bi bi-envelope"></i>Email
            <span class="badge bg-secondary ms-2">Soon</span>
        </a> -->
    </nav>
</div>

<!-- Navigation -->
<div class="sidebar-section-title">Analytics</div>
<nav class="sidebar-nav nav flex-column">
    <a class="nav-link @(currentPage == "overview" ? "active" : "")" href="/dashboard/@Model.ApplicationId">
        <i class="bi bi-speedometer2"></i>Overview
    </a>
    <a class="nav-link @(currentPage == "realtime" ? "active" : "")" href="/dashboard/@Model.ApplicationId/realtime">
        <i class="bi bi-broadcast"></i>Real-time
    </a>
    <a class="nav-link @(currentPage == "pages" ? "active" : "")" href="/dashboard/@Model.ApplicationId/pages">
        <i class="bi bi-file-earmark-text"></i>Pages
    </a>
    <a class="nav-link @(currentPage == "sources" ? "active" : "")" href="/dashboard/@Model.ApplicationId/sources">
        <i class="bi bi-diagram-3"></i>Sources
    </a>
    <a class="nav-link @(currentPage == "events" ? "active" : "")" href="/dashboard/@Model.ApplicationId/events">
        <i class="bi bi-cursor"></i>Events
    </a>
    <a class="nav-link @(currentPage == "conversions" ? "active" : "")" href="/dashboard/@Model.ApplicationId/conversions">
        <i class="bi bi-bullseye"></i>Conversions
    </a>
    <a class="nav-link @(currentPage == "funnels" ? "active" : "")" href="/dashboard/@Model.ApplicationId/funnels">
        <i class="bi bi-filter"></i>Funnels
    </a>
</nav>

<div class="sidebar-section-title">Configuration</div>
<nav class="sidebar-nav nav flex-column">
    <a class="nav-link @(currentPage == "settings" ? "active" : "")" href="/dashboard/@Model.ApplicationId/settings">
        <i class="bi bi-gear"></i>Settings
    </a>
</nav>
