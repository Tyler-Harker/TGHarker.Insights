@page "/dashboard/new"
@model TGHarker.Insights.Web.Pages.Dashboard.NewModel
@{
    ViewData["Title"] = "Create Application";
    ViewData["CurrentPage"] = "applications";
    Layout = "_MainDashboardLayout";
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div class="page-header">
        <h4>Create Application</h4>
        <p class="page-description">Add a new website or application to track.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="chart-container">
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Application Name</label>
                    <input type="text" class="form-control" id="name" name="Name" required
                           placeholder="My Website" />
                </div>

                <div class="mb-3">
                    <label for="domain" class="form-label">Domain</label>
                    <input type="text" class="form-control" id="domain" name="Domain" required
                           placeholder="example.com" />
                    <div class="form-text">Enter your website domain without http:// or https://</div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create Application</button>
                    <a href="/dashboard/applications" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="chart-container">
            <h6 class="mb-3">What happens next?</h6>
            <div class="d-flex gap-3 mb-3">
                <div class="text-primary fw-bold">1</div>
                <div>
                    <div class="fw-medium">Create your application</div>
                    <small class="text-muted">Give it a name and specify your domain.</small>
                </div>
            </div>
            <div class="d-flex gap-3 mb-3">
                <div class="text-primary fw-bold">2</div>
                <div>
                    <div class="fw-medium">Add the tracking script</div>
                    <small class="text-muted">We'll provide a script to add to your website.</small>
                </div>
            </div>
            <div class="d-flex gap-3">
                <div class="text-primary fw-bold">3</div>
                <div>
                    <div class="fw-medium">Start tracking</div>
                    <small class="text-muted">View real-time analytics as visitors arrive.</small>
                </div>
            </div>
        </div>
    </div>
</div>
