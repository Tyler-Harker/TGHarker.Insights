@page "/dashboard/applications"
@model TGHarker.Insights.Web.Pages.Dashboard.ApplicationsModel
@{
    ViewData["Title"] = "Applications";
    ViewData["CurrentPage"] = "applications";
    Layout = "_MainDashboardLayout";
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div class="page-header">
        <h4>Applications</h4>
        <p class="page-description">Manage your tracked applications and websites.</p>
    </div>
    <a href="/dashboard/new" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i>Add Application
    </a>
</div>

<div class="chart-container mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-auto">
            <label class="form-label small">Search</label>
            <input type="text" class="form-control form-control-sm" name="search" value="@Model.Search" placeholder="Search by name or domain..." style="min-width: 250px;" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-search me-1"></i>Search
            </button>
            @if (!string.IsNullOrEmpty(Model.Search))
            {
                <a href="/dashboard/applications" class="btn btn-outline-secondary btn-sm ms-1">Clear</a>
            }
        </div>
    </form>
</div>

<div class="chart-container">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Domain</th>
                <th>Created</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model.Applications)
            {
                var appId = app.Id.StartsWith("app-") ? app.Id[4..] : app.Id;
                <tr>
                    <td>
                        <a href="/dashboard/applications/@appId" class="fw-medium text-decoration-none">@app.Name</a>
                    </td>
                    <td class="text-muted">@app.Domain</td>
                    <td class="text-muted">@app.CreatedAt.ToString("MMM d, yyyy")</td>
                    <td>
                        @if (app.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end">
                        <a href="/dashboard/applications/@appId" class="btn btn-sm btn-outline-primary me-1">
                            <i class="bi bi-bar-chart me-1"></i>Analytics
                        </a>
                        <a href="/dashboard/applications/@appId/settings" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-gear"></i>
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Applications.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-5">
                        @if (!string.IsNullOrEmpty(Model.Search))
                        {
                            <p class="mb-2">No applications match your search.</p>
                            <a href="/dashboard/applications" class="btn btn-outline-secondary btn-sm">Clear Search</a>
                        }
                        else
                        {
                            <p class="mb-2">No applications yet.</p>
                            <a href="/dashboard/new" class="btn btn-primary btn-sm">
                                <i class="bi bi-plus-lg me-1"></i>Add Application
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.TotalPages > 1)
    {
        <nav class="d-flex justify-content-between align-items-center mt-3">
            <small class="text-muted">
                Showing @((Model.PageNumber - 1) * 10 + 1)-@Math.Min(Model.PageNumber * 10, Model.TotalCount) of @Model.TotalCount applications
            </small>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" href="/dashboard/applications?page=@(Model.PageNumber - 1)@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Model.Search}")">Previous</a>
                </li>
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" href="/dashboard/applications?page=@i@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Model.Search}")">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="/dashboard/applications?page=@(Model.PageNumber + 1)@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Model.Search}")">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
