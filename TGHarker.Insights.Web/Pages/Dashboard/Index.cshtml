@page "/dashboard"
@model TGHarker.Insights.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["CurrentPage"] = "overview";
    Layout = "_MainDashboardLayout";
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div class="page-header">
        <h4>Overview</h4>
        <p class="page-description">Aggregated analytics across all your applications.</p>
    </div>
    <div class="btn-group">
        <a href="/dashboard?range=30d" class="btn btn-outline-secondary btn-sm @(Model.Range == "30d" ? "active" : "")">Last 30 days</a>
        <a href="/dashboard?range=7d" class="btn btn-outline-secondary btn-sm @(Model.Range == "7d" ? "active" : "")">Last 7 days</a>
        <a href="/dashboard?range=24h" class="btn btn-outline-secondary btn-sm @(Model.Range == "24h" ? "active" : "")">Last 24 hours</a>
    </div>
</div>

@if (Model.Applications.Count == 0)
{
    <div class="chart-container text-center py-5">
        <i class="bi bi-bar-chart-fill display-1 text-muted mb-4 d-block"></i>
        <h3>Welcome to Insights!</h3>
        <p class="text-muted mb-4">Create your first application to start tracking analytics.</p>
        <a href="/dashboard/new" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Create Application
        </a>
    </div>
}
else
{
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="metric-card">
                <div class="metric-label">Total Page Views</div>
                <div class="metric-value">@Model.Metrics.PageViews.ToString("N0")</div>
                <div class="metric-card-help">Across all applications</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="metric-card">
                <div class="metric-label">Total Sessions</div>
                <div class="metric-value">@Model.Metrics.Sessions.ToString("N0")</div>
                <div class="metric-card-help">Across all applications</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="metric-card">
                <div class="metric-label">Avg. Bounce Rate</div>
                <div class="metric-value">@Model.Metrics.BounceRate.ToString("F1")%</div>
                <div class="metric-card-help">Single-page visits</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="metric-card">
                <div class="metric-label">Applications</div>
                <div class="metric-value">@Model.Metrics.TotalApplications</div>
                <div class="metric-card-help">Active tracking</div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="chart-container">
                <h6 class="mb-3">Traffic Overview</h6>
                @if (Model.ChartData.Any(d => d > 0))
                {
                    <canvas id="trafficChart" height="100"></canvas>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-graph-up d-block mb-2" style="font-size: 2rem;"></i>
                        No traffic data for the selected period.
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="chart-container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">Top Applications</h6>
                    <a href="/dashboard/applications" class="btn btn-outline-secondary btn-sm">View All</a>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Application</th>
                            <th class="text-end">Page Views</th>
                            <th class="text-end">Sessions</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model.TopApplications)
                        {
                            <tr>
                                <td>
                                    <a href="/dashboard/applications/@app.AppId" class="fw-medium text-decoration-none">@app.Name</a>
                                    <br />
                                    <small class="text-muted">@app.Domain</small>
                                </td>
                                <td class="text-end">@app.PageViews.ToString("N0")</td>
                                <td class="text-end">@app.Sessions.ToString("N0")</td>
                                <td class="text-end">
                                    <a href="/dashboard/applications/@app.AppId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.TopApplications.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">No data available for the selected period.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    @if (Model.ChartData.Any(d => d > 0))
    {
        <text>
        // Convert UTC timestamps to local time for hourly view
        const isHourlyChart = @(Model.IsHourlyChart ? "true" : "false");
        const chartTimestamps = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ChartTimestamps));
        let chartLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ChartLabels));

        if (isHourlyChart && chartTimestamps.length > 0) {
            chartLabels = chartTimestamps.map(ts => {
                const date = new Date(ts);
                return date.toLocaleTimeString([], { hour: 'numeric', hour12: true });
            });
        }

        new Chart(document.getElementById('trafficChart'), {
            type: 'line',
            data: {
                labels: chartLabels,
                datasets: [{
                    label: 'Page Views',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ChartData)),
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.15)',
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
        </text>
    }
</script>
}
