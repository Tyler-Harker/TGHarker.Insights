@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: white;
            padding: 6rem 0;
        }
        .hero-section .lead {
            color: #94a3b8;
        }
        .section {
            padding: 5rem 0;
        }
        .section-alt {
            background-color: var(--bg-surface);
        }
        .feature-icon {
            width: 64px;
            height: 64px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
        }
        .feature-icon-primary {
            background-color: var(--primary-bg);
            color: var(--primary);
        }
        .feature-icon-success {
            background-color: var(--success-bg);
            color: var(--success);
        }
        .feature-icon-warning {
            background-color: var(--warning-bg);
            color: var(--warning);
        }
        .feature-icon-info {
            background-color: var(--info-bg);
            color: var(--info);
        }
        .step-number {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background-color: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1.25rem;
            flex-shrink: 0;
        }
        .step-connector {
            position: absolute;
            left: 24px;
            top: 48px;
            bottom: 0;
            width: 2px;
            background-color: var(--border-color);
        }
        .dashboard-preview {
            background: var(--card-bg);
            border-radius: 12px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            padding: 1.5rem;
            border: 1px solid var(--border-color);
        }
        .preview-header {
            display: flex;
            gap: 6px;
            margin-bottom: 1rem;
        }
        .preview-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }
        .preview-dot-red { background-color: #ef4444; }
        .preview-dot-yellow { background-color: #eab308; }
        .preview-dot-green { background-color: #22c55e; }
        .preview-content {
            background: var(--bg-surface-hover);
            border-radius: 8px;
            padding: 1.5rem;
            min-height: 300px;
        }
        .preview-metric {
            background: var(--card-bg);
            border-radius: 8px;
            padding: 1rem;
            text-align: center;
            box-shadow: var(--card-shadow);
        }
        .preview-metric-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-primary);
        }
        .preview-metric-label {
            font-size: 0.75rem;
            color: var(--text-muted);
        }
        .preview-chart {
            background: var(--card-bg);
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1rem;
            box-shadow: var(--card-shadow);
        }
        .pricing-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            box-shadow: var(--card-shadow);
            border: 1px solid var(--border-color);
            height: 100%;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .pricing-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        }
        .pricing-card.featured {
            border-color: var(--primary);
            position: relative;
        }
        .pricing-badge {
            position: absolute;
            top: -12px;
            left: 50%;
            transform: translateX(-50%);
            background: var(--primary);
            color: white;
            padding: 0.25rem 1rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .pricing-price {
            font-size: 3rem;
            font-weight: 700;
            color: var(--text-primary);
        }
        .pricing-period {
            color: var(--text-muted);
        }
        .check-icon {
            color: var(--success);
            margin-right: 0.5rem;
        }
        .cta-section {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: white;
            padding: 5rem 0;
        }
        .stat-item {
            text-align: center;
            padding: 1rem;
        }
        .stat-label {
            color: var(--text-muted);
            font-size: 0.875rem;
        }
        .landing-footer {
            background-color: var(--bg-surface);
            border-color: var(--border-color) !important;
        }
        .code-block {
            background-color: var(--code-bg);
            color: var(--text-primary);
        }
        .code-block code {
            background: transparent;
            color: var(--code-text);
        }
        /* Feature titles */
        .feature-title {
            color: var(--text-primary);
        }
        /* Section headings */
        .section-heading {
            color: var(--text-primary);
        }
        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary);
        }
        .chart-bar {
            height: 8px;
            border-radius: 4px;
            background: linear-gradient(90deg, var(--primary), var(--primary-hover));
        }
    </style>
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Simple, Privacy-Friendly Analytics</h1>
                <p class="lead mb-4">
                    Understand your website traffic without compromising user privacy.
                    Self-hosted, open-source, and built with modern technology.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a href="/dashboard" class="btn btn-light btn-lg px-4">Go to Dashboard</a>
                    }
                    else
                    {
                        <a href="/login" class="btn btn-light btn-lg px-4">Get Started Free</a>
                        <a href="#features" class="btn btn-outline-light btn-lg px-4">Learn More</a>
                    }
                </div>
            </div>
            <div class="col-lg-6 mt-5 mt-lg-0">
                <div class="dashboard-preview">
                    <div class="preview-header">
                        <div class="preview-dot preview-dot-red"></div>
                        <div class="preview-dot preview-dot-yellow"></div>
                        <div class="preview-dot preview-dot-green"></div>
                    </div>
                    <div class="preview-content">
