                                <div class="chart-bar" style="width: 8%; height: 65%;"></div>
                                <div class="chart-bar" style="width: 8%; height: 90%;"></div>
                                <div class="chart-bar" style="width: 8%; height: 75%;"></div>
                                <div class="chart-bar" style="width: 8%; height: 55%;"></div>
                                <div class="chart-bar" style="width: 8%; height: 70%;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Bar -->
<div class="section-alt py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="stat-item">
                    <div class="stat-value">100%</div>
                    <div class="stat-label">Privacy Compliant</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
